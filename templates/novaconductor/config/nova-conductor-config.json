{
    "command": "/usr/bin/nova-conductor",
    "config_files": [
        {
            "source": "/var/lib/openstack/config/nova-blank.conf",
            "dest": "/etc/nova/nova.conf",
            "owner": "nova",
            "perm": "0600"
        },
        {
            "source": "/var/lib/openstack/config/01-nova.conf",
            "dest": "/etc/nova/nova.conf.d/01-nova.conf",
            "owner": "nova",
            "perm": "0600"
        },
        {
            "source": "/var/lib/openstack/config/02-nova-override.conf",
            "dest": "/etc/nova/nova.conf.d/02-nova-override.conf",
            "owner": "nova",
            "perm": "0600",
            "optional": true
        },
        {
            "source": "/var/lib/openstack/config/my.cnf",
            "dest": "/etc/my.cnf",
            "owner": "nova",
            "perm": "0644"
        },
        {
            "source": "/var/lib/config-data/mtls/certs/*",
            "dest": "/etc/pki/tls/certs/",
            "owner": "nova",
            "perm": "0640",
            "optional": true,
            "merge": true
        },
        {
            "source": "/var/lib/config-data/mtls/private/*",
            "dest": "/etc/pki/tls/private/",
            "owner": "nova",
            "perm": "0600",
            "optional": true,
            "merge": true
        }
    ],
    "permissions": [
        {
            "path": "/var/log/nova",
            "owner": "nova:nova",
            "recurse": true
        }
    ]
}
